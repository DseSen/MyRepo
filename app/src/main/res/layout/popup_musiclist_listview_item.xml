<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#fff"
    android:orientation="horizontal">
<TextView
    android:id="@+id/popup_musiclist_listview_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="歌名"
    android:textSize="15sp"
    android:layout_centerVertical="true"
    android:layout_marginLeft="10dp"
     />
    <TextView
        android:id="@+id/hua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="—"
        android:textSize="10sp"
        android:layout_toRightOf="@id/popup_musiclist_listview_name"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
         />
    <TextView
        android:id="@+id/popup_musiclist_listview_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="作者"
        android:textSize="10sp"
        android:layout_toRightOf="@id/hua"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
         />
    <ImageView
        android:id="@+id/popup_musiclist_listview_delete"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="删除"
        android:focusable="false"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="6dp"
        android:src="@drawable/ic_delete"
        android:scaleType="center"
        android:background="@drawable/playitemclick"
         />
</RelativeLayout>
