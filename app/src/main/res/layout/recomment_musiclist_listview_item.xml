<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="3dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:background="@color/colorPrimary"/>
        <TextView
            android:id="@+id/recomment_musiclist_listview_item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_weight="5"
            android:text="推荐信息"
            android:textSize="15sp" />

        <Button
            android:id="@+id/recomment_musiclist_listview_item_btn"
            android:layout_width="15dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:layout_marginLeft="1dp"
            android:background="#fff"
            android:layout_gravity="center"
            android:text="更多" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recomment_musiclist_listview_item_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"></android.support.v7.widget.RecyclerView>
</LinearLayout>
