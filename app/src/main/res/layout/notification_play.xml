<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
<ImageView
    android:id="@+id/notification_play_image"
    android:layout_width="110dp"
    android:layout_height="110dp"
    android:background="@drawable/nopic"
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/notification_play_title"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:textColor="#fff"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="歌名"/>
        <TextView
            android:id="@+id/notification_play_author"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="10dp"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="作者"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            >

            <ImageView
                android:id="@+id/notification_play_last"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_last"
                android:background="@drawable/playitemclick"
                />

            <ImageView
                android:id="@+id/notification_play_playOrPause"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_pause"
                android:background="@drawable/playitemclick"/>

            <ImageView
                android:id="@+id/notification_play_next"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:clickable="true"
                android:src="@drawable/ic_next"
                android:background="@drawable/playitemclick"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>